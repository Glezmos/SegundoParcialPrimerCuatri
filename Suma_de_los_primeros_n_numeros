using System;

class Program
{
    public static void Main()
    {
        int suma = 0;
        int x = 0;
        int n;

        Console.WriteLine("Ingresa el numero:");
        n = int.Parse(Console.ReadLine());

        do
        {
            x++;
            suma += x;
        }
        while (x < n);

        Console.WriteLine("La suma de 1 a " + n + " es = " + suma);
    }
}
